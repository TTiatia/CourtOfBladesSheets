---
const {name} = Astro.props;
const pages = [
    {name: "Character", id: 0, translate: "Character"},
    {name: "Coterie", id: 1, translate: "Coterie"},
    {name: "Faction List", id: 2, translate: "FactionList"},
    {name: "GM Turn", id: 3, translate: "GMTurn"},
    {name: "Sheet Settings", id: 4, translate: "SheetSettings"},
];
---

<select name={`attr_setting_${name}`}>
    {pages.map((item) => (
      <>
        <option value={item.id} data-i18n={item.translate} class="capitalize">{item.name}</option>
      </>
    ))}
</select>